import json
import boto3
import base64

s3 = boto3.client("s3")

def lambda_handler(event, context):
    bucket_name = "textract-input-output-new-2025-bucket"

    try:
        # API Gateway sends binary files as base64 
        body = event["body"]
        is_base64 = event.get("isBase64Encoded", False)

        if is_base64:
            pdf_bytes = base64.b64decode(body)
        else:
            pdf_bytes = body.encode()

        # File name (pass in query, header, or generate dynamically)
        file_key = event.get("queryStringParameters", {}).get("filename", "uploaded.pdf")

        # Upload to S3
        s3.put_object(
            Bucket=bucket_name,
            Key=file_key,
            Body=pdf_bytes,
            ContentType="application/pdf"
        )

        return {
            "statusCode": 200,
            "body": json.dumps({"message": "PDF uploaded successfully", "file": file_key})
        }

    except Exception as e:
        return {
            "statusCode": 500,
            "body": json.dumps({"error": str(e)})
        }